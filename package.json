{
  "name": "code-flow",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prettier --check . && next build",
    "start": "next start",
    "lint": "prettier --check . && next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "test:db:reset": "npm run test:db:down && npm run test:db:up && sleep 3",
    "test:integration": "npm run test:db:up && npm run test:run && npm run test:db:down",
    "docker:up": "docker compose --env-file .env.local up -d",
    "docker:down": "docker compose --env-file .env.local down",
    "docker:logs": "docker compose --env-file .env.local logs -f",
    "docker:status": "docker ps --filter name=code-flow",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "dev:all": "npm run docker:up && npm run dev",
    "db:generate": "npx dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate": "npx dotenv -e .env.local -- drizzle-kit migrate",
    "db:push": "npx dotenv -e .env.local -- drizzle-kit push",
    "db:studio": "npx dotenv -e .env.local -- drizzle-kit studio",
    "db:drop": "npx dotenv -e .env.local -- drizzle-kit drop",
    "db:reset": "npm run db:drop && npm run db:generate && npm run db:push",
    "db:health": "curl -f http://localhost:3000/api/health/db || echo 'Health check failed'",
    "db:check": "npm run docker:status && echo '\n' && npm run db:health",
    "auth:clear": "npx dotenv -e .env.local -- tsx src/db/clear-auth-data.ts"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.9.1",
    "drizzle-orm": "^0.44.2",
    "next": "15.3.1",
    "next-auth": "^5.0.0-beta.28",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "jsdom": "^26.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
